<?xml version="1.0" encoding="utf-8" ?>
<f:BaseDraggableView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauDragNDrop.Appointments.Calendar.Views.DayListView"
             xmlns:f="clr-namespace:MauDragNDrop.Functionality"
             xmlns:local="clr-namespace:MauDragNDrop.Calendar"
             x:DataType="local:AppointmentModel">
    <VerticalStackLayout HeightRequest="80"
                         Padding="12, 12, 12, 0"
                         BackgroundColor="White">
        <Label Text="{Binding Title}"
               FontSize="Large"/>
        <Label FontSize="Default"
               Text="{Binding AppointmentStartToEnd}"/>
        <BoxView HeightRequest="1"
                 BackgroundColor="#DDDDDD"
                 Margin="0, 12, 0, 0"/>
    </VerticalStackLayout>
</f:BaseDraggableView>
