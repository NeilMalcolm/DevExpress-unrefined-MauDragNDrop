<?xml version="1.0" encoding="utf-8" ?>
<f:BaseDropTarget xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  x:Class="MauDragNDrop.Calendar.Views.DefaultCalendarDateView"
                  xmlns:f="clr-namespace:MauDragNDrop.Functionality"
                  xmlns:dx="clr-namespace:DevExpress.Maui.Scheduler;assembly=DevExpress.Maui.Scheduler"
                  x:DataType="dx:CellViewModel"
                  BackgroundColor="White">
    <Label x:Name="DayLabel"
           Margin="3, 3, 0, 0"
           VerticalOptions="Start"
           HorizontalOptions="Start">
        <Label.FormattedText>
            <FormattedString>
                <Span x:Name="DaySpan"
                      Text="{Binding Interval.Start.Day}"
                      FontSize="12"/>
            </FormattedString>
        </Label.FormattedText>
    </Label>
</f:BaseDropTarget>
